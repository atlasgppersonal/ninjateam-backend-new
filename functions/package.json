{
  "name": "functions",
  "scripts": {
    "build": "npx tsc",
    "postinstall": "cross-env PLAYWRIGHT_BROWSERS_PATH=0 PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 npx playwright install --force chromium",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "testPopulateData": "ts-node functions/scripts/testPopulateData.ts",
    "testPrepareSmsCampaign": "ts-node scripts/testPrepareSmsCampaign.ts",
    "updateSmsLinks": "node -r ts-node/register -r tsconfig-paths/register scripts/updateSmsLinks.ts",
    "getFirestoreData": "ts-node scripts/getFirestoreData.ts"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "@google-cloud/vertexai": "^1.10.0",
    "@microsoft/microsoft-graph-client": "^3.0.0",
    "@types/axios": "^0.9.36",
    "axios": "^1.11.0",
    "cross-env": "^7.0.3",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^17.2.2",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.0.1",
    "playwright": "^1.45.0",
    "rss-parser": "^3.13.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "private": true
}
