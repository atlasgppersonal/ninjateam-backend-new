{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~scripts/*": ["./scripts/*"],
      "~types/*": ["./src/types/*"],
      "~utils/*": ["./src/utils/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "scripts"
  ],
  "exclude": []
}
